<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:gravity="center"
	android:layout_width="fill_parent" android:id="@+id/dialog_setting"
	android:layout_height="match_parent">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textSize="20sp" 
		android:layout_marginLeft="25px" android:layout_marginRight="25px"
		android:text="@string/servip"/>
	<EditText android:text="" android:id="@+id/SeverIpEditor"
		android:textSize="20sp" android:layout_width="match_parent"
		android:layout_marginLeft="25px" android:layout_marginRight="25px"
		android:layout_height="wrap_content"></EditText>
	<CheckBox android:id="@+id/LoudSpkCheck" android:text="@string/spkpath" 
	android:layout_marginLeft="25px" android:layout_marginRight="25px"
	android:layout_height="wrap_content" android:layout_width="match_parent"></CheckBox>
</LinearLayout>
